<div class="mt-4">
  <div class="row">
    <div class="col-lg-3">
      {{#each other}}
        <div class="card" style="width: 18rem;">
          <img src="{{this.image}}" class="img-thumbnail" alt="..." />
          <div class="card-body">
            <p>{{this.description}}</p>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="col-lg-9">
      <h2>{{post.title}}</h2>
      <img
        src="{{post.image}}"
        class="card-img-top"
        alt="..."
        width="537"
        height="358"
      />
      <p>{{post.content}}</p>
    </div>
  </div>
</div>